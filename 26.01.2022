
public class retta {
	
	private int m, q, y;
	public int x;
	
	public retta() 
	{
		m=0;
		q=0;
	}
	public retta(int mV, int qV) 
	{
		m=mV;
		q=qV;
	}
	
	public int getY(int xV) 
	{
		return y=m*xV+q;
	}
	
	public double distPuntoRetta(int xP, int yP) 
	{
		return Math.abs(yP-m*xP-q)/Math.sqrt(1*1+m*m) ;
	}
}
